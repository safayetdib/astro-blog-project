---
// component imports
import MainHead from '../layouts/MainHead.astro';
import Nav from '../components/Navbar/Nav.astro';
import Footer from '../components/Footer/Footer.astro';

// style imports
import '../styles/global.css';

const { title = 'Home', description = 'Home page' } = Astro.props;
---

<html lang="en">
	<MainHead
		title={title}
		description={description}
	/>
	<body>
		<Nav />
		<slot>Default Text</slot>
		<Footer />
	</body>
</html>
