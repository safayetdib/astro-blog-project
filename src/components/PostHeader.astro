---
// library imports
import { Image } from '@astrojs/image/components';

// utils imports
import { slugify, formatDate } from '../js/utils';

const { category, title, author, image, date } = Astro.props;
---

<header>
	<div class="container">
		<small>
			<a
				href={`/category/${slugify(category)}`}
				class="badge"
				>{category}</a
			>
		</small>
		<h2 class="h2">{title}</h2>
		<p>
			by <a href={`/author/${slugify(author)}`}>{author}</a> - {
				formatDate(date)
			}
		</p>
	</div>

	<Image
		src={image.src}
		alt={image.alt}
		height="600"
		width="1200"
		format="avif"
		fit="cover"
		quality={80}
		aspectRatio="5:2"
		class="hero-image"
	/>

	<!-- <img
    src={image.src}
    alt={image.alt}
  /> -->
</header>
